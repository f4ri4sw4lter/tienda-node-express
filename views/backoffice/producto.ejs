<%- include ('../layouts/bo_header.ejs') %>
    <div id="layoutSidenav">
        <%- include ('../layouts/bo_sidenav.ejs') %>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Configurar Paginas</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item active">Productos</li>
                        </ol>

                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table me-1"></i>
                                Producto
                            </div>
                            <div class="card-body">
                                <form method="post" action="http://localhost:3000/backoffice/producto/<%=producto.id%>/update" target="_self">
                                    <div class="mb-3 row">
                                        <label for="formId" class="col-sm-2 col-form-label">Id</label>
                                        <div class="col-sm-10">
                                            <input type="text" value="<%=producto.id%>" id="formId" class="form-control" disabled>
                                            <input type="text" value="<%=producto.id%>" hidden name="id">
                                        </div>
                                    </div>

                                    <div class="mb-3 row">
                                        <label for="formTitulo" class="col-sm-2 col-form-label">Titulo</label>
                                        <div class="col-sm-10">
                                            <input type="text" value="<%=producto.titulo%>" id="formTitulo"
                                                class="form-control" name="titulo">
                                        </div>
                                    </div>

                                    <div class="mb-3 row">
                                        <label for="formDescripcion" class="col-sm-2 col-form-label">Descripcion</label>
                                        <div class="col-sm-10">
                                            <input type="text" value="<%=producto.descripcion%>" id="formDescripcion"
                                                class="form-control" max="500" name="descripcion">
                                        </div>
                                    </div>

                                    <div class="mb-3 row">
                                        <label for="formPrecio" class="col-sm-2 col-form-label">Precio</label>
                                        <div class="col-sm-10">
                                            <div class="input-group">
                                                <span class="input-group-text" id="basic-addon1">$</span>
                                                <input type="number" value="<%=producto.precio%>" id="formPrecio"
                                                    class="form-control" name="precio">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3 row">
                                        <label class="col-sm-2 col-form-label">Destacado</label>
                                        <div class="col-sm-10">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio"
                                                    id="offDestacado" value="0" name="destacado" <% if(producto.destacado==0){ %> checked <% } %>>
                                                    <label class="form-check-label" for="offDestacado">NO</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" 
                                                    id="onDestacado" value="1" name="destacado" <% if(producto.destacado==1){ %> checked <% } %>>
                                                    <label class="form-check-label" for="onDestacado">SI</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3 row">
                                        <label for="formCategoria" class="col-sm-2 col-form-label">Categoria</label>
                                        <div class="col-sm-10">
                                            <select class="form-select" aria-label="Default select example" id="formCategoria" name="categoria">
                                                <% for(var i=0; i<categorias.length; i++){ %>
                                                    <option value="<%= categorias[i].id %>" <% if(producto.id_categoria == categorias[i].id){ %> selected <% } %> ><%= categorias[i].nombre %></option>
                                                <% } %>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="mb-3 row">
                                        <label for="formImagen" class="col-sm-2 col-form-label">Imagen</label>
                                        <div class="col-sm-10">
                                            <img src="<%=producto.imagen%>" class="img-thumbnail" alt="..."
                                                id="formImagen">
                                            <input type="file" class="form-control" id="inputGroupFile01" name="imagen">
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <button class="btn btn-primary" type="submit">Guardar</button>
                                        <a class="btn btn-danger" type="button" href="http://localhost:3000/backoffice/productos">Cancelar</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </main>
                <%- include ('../layouts/bo_footer.ejs') %>
            </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="../public/javascripts/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/chart-area-demo.js"></script>
    <script src="assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="../public/javascripts/datatables-simple-demo.js"></script>
    </body>

    </html>