<%- include ('../layouts/bo_header.ejs') %>
    <div id="layoutSidenav">
        <%- include ('../layouts/bo_sidenav.ejs') %>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Configurar Paginas</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Productos</li>
                    </ol>

                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            Lista de productos
                        </div>
                        <div class="card-body">
                            <table id="datatablesSimple" class="table">
                                <thead>
                                    <tr>
                                        <th>Titulo</th>
                                        <th>Descripcion</th>
                                        <th>precio</th>
                                        <th>Destacado</th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var i=0; i<productos.length; i++){ %>
                                        <tr>
                                            <td>
                                                <%=productos[i].titulo%>
                                            </td>
                                            <td>
                                                <%=productos[i].descripcion%>
                                            </td>
                                            <td>
                                                $<%=productos[i].precio%>
                                            </td>
                                            <td>
                                                <% if(productos[i].destacado){ %>
                                                    <button type="button" class="btn btn-warning">SI</button>
                                                <% }else{ %>
                                                    <button type="button" class="btn btn-danger">NO</button>
                                                <% } %>
                                            </td>
                                            <td>
                                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                                    <button type="button" class="btn btn-info">M</button>
                                                    <button type="button" class="btn btn-danger">X</button>
                                                </div>
                                                
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
            <%- include ('../layouts/bo_footer.ejs') %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="../public/javascripts/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/chart-area-demo.js"></script>
    <script src="assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="../public/javascripts/datatables-simple-demo.js"></script>
    </body>

    </html>